{
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-var": "error"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}